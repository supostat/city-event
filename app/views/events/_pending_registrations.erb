<br/><br/><br/>
<% if @pending_registrations.count >0  %>
    <h3 class="rule">Pending Registrations</h3>
    <table id="registered_events"  class='datatable with_stripes"'>
      <thead>
      <tr>
        <th colspan="2">Title</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Start Time</th>
        <th>End Time</th>
      </tr>
      </thead>
      <tbody>
      <% @pending_registrations.each do |event| %>
          <tr id="<%= dom_id(event) %>">
            <% reg =Registration.find_by_user_id_and_event_id(current_user.id,event.id) %>
            <td><%= event.title %></td>
            <td><%= link_to 'Pay Now',"registrations/#{reg.id}/summary",:class => "btn  btn_mini" %></td>
            <td><%= event.start_date.strftime("%m/%d/%Y") %></td>
            <td><%= event.end_date.strftime("%m/%d/%Y") %></td>
            <td><%= event.start_time.strftime("%I:%M%p") %></td>
            <td><%= event.end_time.strftime("%I:%M%p") %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <span></span>
<% end %>