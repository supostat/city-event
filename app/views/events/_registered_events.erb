<br/><br/><br/>
<% if @registered_events.count >0  %>
    <h3 class="rule">Events You've Registered For</h3>
    <table id="registered_events"  class='datatable with_stripes autosort'>
      <thead>
      <tr>
        <th>Title</th>
        <th data-autosort="true" data-sortdir="asc">Start Date</th>
        <th>End Date</th>
        <th>Start Time</th>
        <th>End Time</th>
      </tr>
      </thead>
      <tbody>
      <% @registered_events.each do |event| %>
          <tr id="<%= dom_id(event) %>">
            <% reg =Registration.find_by_user_id_and_event_id(current_user.id,event.id) %>
            <td><%= link_to event.title,registration_path(reg.id) %></td>
            <td><%= event.start_date.strftime("%m/%d/%Y") %></td>
            <td><%= event.end_date.strftime("%m/%d/%Y") %></td>
            <td><%= event.start_time.strftime("%I:%M%p") %></td>
            <td><%= event.end_time.strftime("%I:%M%p") %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <h3 class="rule">You have not registered any events yet!</h3>
<% end %>